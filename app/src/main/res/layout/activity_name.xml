<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.charu.game.Name"
    android:background="@mipmap/background1"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Player names"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:textSize="30dp"
        android:textColor="#000000"

        />
    <EditText
        android:layout_width="fill_parent"
        android:layout_margin="30dp"
        android:layout_height="wrap_content"
        android:hint="Player 1"
        android:id="@+id/player11"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Player 2"
        android:id="@+id/player12"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"

        android:layout_gravity="center"/>
    <Button
        android:layout_width="200dp"
        android:layout_margin="15dp"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/bstartplay"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/cornerradius"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textAllCaps="false"
        />



</LinearLayout>
